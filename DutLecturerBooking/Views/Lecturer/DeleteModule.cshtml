@model DutLecturerBooking.Data.LecturerModules

@{
    ViewData["Title"] = "Delete Module";
}

<h1>Delete Module</h1>

<p>Are you sure you want to delete this module?</p>

<div>
    <h4>Module: @Model.Modules.ModuleName</h4>
    @* <h4>Course: @Model.Course.CourseName</h4> *@
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="LecturerModuleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageLecturerModules" class="btn btn-secondary">Cancel</a>
</form>
