@model DutLecturerBooking.Data.LecturerModules

@{
    ViewData["Title"] = "Edit Module Assignment";
}

<h1>Edit Module Assignment</h1>

<form asp-action="EditModule" method="post">
    <input type="hidden" asp-for="LecturerModuleId" />

    <div class="form-group">
        <label for="CourseId">Select Course</label>
        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Courses"></select>
    </div>

    <div class="form-group">
        <label for="ModuleId">Select Module</label>
        <select asp-for="ModuleId" class="form-control" asp-items="ViewBag.Modules"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>