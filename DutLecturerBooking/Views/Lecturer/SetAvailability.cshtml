@model DutLecturerBooking.Data.LecturerConsultationAvailability

@{
    ViewData["Title"] = "Set Consultation Availability";
}

<h1>Set Consultation Availability</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="SetAvailability" method="post">
    <div class="form-group">
        <label for="Module">Select Module</label>
        <select asp-for="ModuleId" class="form-control" asp-items="ViewBag.Modules"></select>
    </div>

    <div class="form-group">
        <label for="ConsultationDate">Consultation Date</label>
        <input type="date" asp-for="ConsultationDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="StartTime">Start Time</label>
        <input type="time" asp-for="StartTime" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="EndTime">End Time</label>
        <input type="time" asp-for="EndTime" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Set Availability</button>
</form>
