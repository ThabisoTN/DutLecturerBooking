@model IEnumerable<DutLecturerBooking.Data.StudentModules>

@{
    ViewData["Title"] = "Manage Your Registered Modules";
}

<!-- Page Styles -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    h1 {
        font-size: 2.5rem;
        color: #333;
        text-align: center;
        margin-bottom: 30px;
    }

    .alert {
        padding: 15px;
        border-radius: 5px;
        font-size: 1rem;
        text-align: center;
        max-width: 600px;
        margin: 20px auto;
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeeba;
    }

    /* Table Styles */
    .table {
        width: 80%;
        max-width: 800px;
        margin: 0 auto 30px auto;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

        .table thead {
            background-color: #007bff;
            color: #fff;
        }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table th {
            font-size: 1.1rem;
        }

        .table td {
            font-size: 1rem;
        }

    .btn-register {
        text-decoration: none;
        color: #fff;
        background-color: #28a745;
        padding: 10px 20px;
        border-radius: 5px;
        margin-top: 20px;
        display: block;
        width: 200px;
        text-align: center;
        margin: 20px auto;
        transition: background-color 0.3s ease;
    }

        .btn-register:hover {
            background-color: #218838;
        }
</style>

<div class="container">
    <h1>Manage Your Registered Modules</h1>

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-warning" role="alert">
            @TempData["InfoMessage"]
        </div>
        <a href="@Url.Action("RegisterStudentModules", "Student")" class="btn-register">Register for Modules</a>
    }
    else if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Module Name</th>
                    <th>Course</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var module in Model)
                {
                    <tr>
                        <td>@module.Modules.ModuleName</td>
                        <td>@module.Modules.Course.CourseName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
